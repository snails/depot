<%= form_for(@order) do |f| %>
  <%= render 'shared/error_message', object: f.object %>

  <div class="field">
    <%= f.label :name %><br>
    <%= f.text_field :name, size: 30 %>
  </div>
  <div class="field">
    <%= f.label :address %><br>
    <%= f.text_area :address, rows: 3, cols: 60 %>
  </div>
  <div class="field">
    <%= f.label :email %><br>
    <%= f.email_field :email, size: 80, placeholder: "Please input your email..." %>
  </div>
  <div class="field">
    <%= f.label :pay_type %><br>
    <%= f.select :pay_type, Order::PAYMENT_TYPES,
      prompt: "Select a payment method" %>
  </div>
  <div class="actions">
    <%= f.submit 'Place Order' %>
  </div>
<% end %>
