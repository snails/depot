<% if notice %>
  <p id="notice"><%= notice %></p> 
<% end %>
<h2>Your Cart</h2>
<table>
  <% @cart.line_items.each do |item| %>
  <tr>
    <td><%= item.quatity %>&times;</td>
      <td><%= item.product.title %></td>
      <td class="item_price"><%= number_to_currency(item.total_price, unit: '￥') %></td>
      <td><%= button_to "Inc", line_items_path(product_id: item.product_id) %></td>
      <td><%= button_to "Dec", line_item_path(id: item.id, product_id: item.product_id), method: :patch %></td>
      <td><%= button_to "Remove", line_item_path(id: item.id), method: :delete %></td>
  </tr>
  <% end %>

  <tr class="total_line">
    <td colspan="2">Total</td>
    <td class="total_cell"><%= number_to_currency(@cart.total_price, unit: '￥') %></td>
  </tr>
</table>
<%= button_to "Empty cart", @cart, method: :delete,
  data: { confirm: "Are you sure?" } %>
